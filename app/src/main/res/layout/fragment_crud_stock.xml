<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".ui.crudstock.CrudStockFragment">

    <EditText
        android:id="@+id/crud_stock_bt_code_product"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="@drawable/radius_btn"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:hint="@string/cod_product"
        android:textSize="18sp"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/container_plus"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/radius_btn_plus"
        app:layout_constraintStart_toEndOf="@+id/crud_stock_bt_code_product"
        app:layout_constraintTop_toTopOf="@id/crud_stock_bt_code_product"
        app:layout_constraintBottom_toBottomOf="@id/crud_stock_bt_code_product" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crud_stock_bt_plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_plus"
        app:layout_constraintStart_toStartOf="@+id/container_plus"
        app:layout_constraintEnd_toEndOf="@+id/container_plus"
        app:layout_constraintTop_toTopOf="@+id/container_plus"
        app:layout_constraintBottom_toBottomOf="@+id/container_plus" />
    <ImageView
        android:id="@+id/crud_stock_find_product"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_find"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/crud_stock_bt_code_product"
        app:layout_constraintBottom_toBottomOf="@id/crud_stock_bt_code_product"
        app:layout_constraintTop_toTopOf="@id/crud_stock_bt_code_product" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/crud_stock_rv"
        android:layout_width="match_parent"
        android:background="@color/color_rv"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_crud_stock"
        app:layout_constraintTop_toBottomOf="@+id/crud_stock_bt_code_product"
        app:layout_constraintBottom_toTopOf="@+id/crud_stock_tv_select_product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/crud_stock_tv_select_product"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_product"
            android:textSize="18sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
