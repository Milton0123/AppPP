<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_background"
    android:layout_height="match_parent"
    tools:context=".ui.see_stock.SeeStockFragment">


    <EditText
        android:id="@+id/stock_admin_et_code_product"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:textSize="20sp"
        android:hint="@string/cod_product"
        android:textColorHint="@color/white"
        android:background="@drawable/radius_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stock_admin_rv"
        android:layout_width="match_parent"
        android:background="@color/color_rv"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_rv_see_stock"
        app:layout_constraintTop_toBottomOf="@+id/stock_admin_et_code_product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/stock_admin_find_product"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_find"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/stock_admin_et_code_product"
        app:layout_constraintBottom_toBottomOf="@id/stock_admin_et_code_product"
        app:layout_constraintTop_toTopOf="@id/stock_admin_et_code_product" />

</androidx.constraintlayout.widget.ConstraintLayout>
